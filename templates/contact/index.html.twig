{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}


{% block body %}
<br><br><br>

<section>
    <div class="container d-flex flex-column">
        <div class="row-2 align-items-center gx-0 min-vh-100">

            <div class="col-12 col-md-6 py-8 py-md-11">
                <h2 class="fw-bold text-center mb.2">Nous contacter.</h2>
                <p class="fs-lg text-center text-muted mb-0">Une question ? N'hésitez pas à nous contacter.</p>
                <hr class="hr-sm my-6 my-md-8 mx-auto bg-gray-300">

                    {{ form_start(form) }}
                        {% for message in app.flashes('success') %}
                        <div class="alert alert-success">
                            {{ message}}
                        </div>
                         {% endfor %} 
                    
                    <div class="my-custom-class-for-errors">
                        {{ form_errors(form) }}
                    </div>

                    <div class="form-group mb-5">
                        <label class="form-label" for="contactName">
                            {{ form_label(form.nom) }}
                        </label>
                        {{form_widget(form.nom) }}
                    </div>

                    <div class="form-group mb-5">
                        <label class="form-label" for="contactEmail">
                            {{form_label(form.email) }}
                        </label>
                        {{form_widget(form.email) }}
                    </div>

                    <div class="form-group mb-5">
                        <label class="form-label" for="contactMessage">
                            {{form_label(form.message) }}
                        </label>
                        {{form_widget(form.message) }}
                    </div>

                    <div class="form-group mb-5">
                        {{form_widget(form.envoyer)}}
                    </div>
                    
                    {{form_end(form)}}

            </div>
        </div>
    </div>
</section>
{% endblock %}