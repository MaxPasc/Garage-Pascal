{% extends 'base.html.twig' %}

{% block title %}Hello ServiceController!{% endblock %}

{% block body %}

<h1>Liste d'un service</h1>

<div>
    <button><a href="{{ path('services_create') }}">Ajouter un service</a></button>
</div>

<table>
    <thead>
        <th scope="col">Service</th>
        <th scope="col">Description</th>
        <th scope="col">Prix</th>
        <th scope="col">Modifier</th>
        <th scope="col">Supprimer</th>
    </thead>

    <tbody>
        {% for service in services %}
        <tr>
            <td>{{ service.name }}</td>
            <td>{{ service.description }}</td>
            <td>{{ service.price }}</td>
            <td>
                <button class="btn"><a href="{{ path('services_edit', {"id": service.id}) }}">Modifier</a></button>
            </td>
            <td>
                <button class="btn"><a href="{{ path('services_delete', {"id": service.id}) }}">Supprimer</a></button>

            </td>
        </tr>
        {% endfor %}
    </tbody>

</table>


{% endblock %}
